<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>My Blog</h1>
    <a href="/new" class="btn">Create New Post</a>
    <div class="posts">
      <% if (posts.length === 0) { %>
        <p>No posts yet.</p>
      <% } %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <div class="actions">
            <a href="/edit/<%= post.id %>" class="btn">Edit</a>
            <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html> 